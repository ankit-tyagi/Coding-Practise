{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build File",
            "type": "shell",
            "command": "g++ -std=gnu++0x '${file}'",
           // "args": [
            //    "-std=gnu++0x"
           // ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run File",
            "type": "shell",
            "command": "./a.exe",
            "problemMatcher": [],
            "dependsOn":["Build File"]
        }
    ]
}